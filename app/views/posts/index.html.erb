<style>
    body {
        background-color: lightblue;
        }
    }
</style>

<div class="container text-center">    
  <div class="row">
    <div class="col-sm-3 well">
      <div class="well">
        <p><a href="#">My Profile</a></p>
        <% if user_signed_in? %>
              <%= image_tag current_user.avatar.url, size: 100 %>
    
              <% end %>
      </div>
      <div class="well">
        <p><a href="#">Interests</a></p>
        <p>
          <span class="label label-default">News</span>
          <span class="label label-primary">Gaming</span>
          <span class="label label-success">Labels</span>
          <span class="label label-info">Football</span>
          <span class="label label-warning">Gaming</span>
          <span class="label label-danger">Friends</span>
        </p>
      </div>
      <div class="alert alert-success fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
        <p><strong>Ey!</strong></p>
        People are looking at your profile. Find out who.
      </div>
    </div>
    <div class="col-sm-7">
    
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <p contenteditable="true">Status: Feeling Awesome!</p>
              <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-thumbs-up"></span> Like
              </button>     
            </div>
          </div>
        </div>
      </div>
      <% @posts.each do |post| %>
      <div class="row">
        <div class="col-sm-3">
          <div class="well">
           <p><%= link_to post.author %></p>
            <% if user_signed_in? %>
              <%= image_tag current_user.avatar.url, size: 50 %>
            <% else %>
              <img src ="https://www.edgehill.ac.uk/health/files/2017/12/blank-profile.png" alt="blank img">
              <% end %>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="well">
              
            <p> <%= link_to post.blog_entry %>
              </p>
          </div>
        </div>
      </div>
     <% end %>


